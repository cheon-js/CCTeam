<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="672dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_text"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_above="@+id/line"
            android:gravity="center_horizontal"
            android:text="메인화면"
            android:textSize="30sp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="153dp">
            android:orientation="horizonal"

            <Button
                android:id="@+id/btnMainNotice"
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_bg"
                android:drawableLeft="@drawable/notice"
                android:drawablePadding="18dip"
                android:gravity="left|center_vertical"
                android:paddingLeft="18dip"
                android:text="공지사항"
                android:textColor="#ffffff"
                android:textSize="50px" />

            <Button
                android:id="@+id/btnFreeboard"
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_bg"
                android:drawableLeft="@drawable/freeboard"
                android:drawablePadding="10dip"
                android:gravity="left|center_vertical"
                android:paddingLeft="18dip"
                android:text="자유게시판"
                android:textColor="#ffffff"
                android:textSize="50px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="153dp">
            android:orientation="horizonal"

            <Button
                android:id="@+id/btnQnA"
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_bg"
                android:drawableLeft="@drawable/qna"
                android:drawablePadding="10dip"
                android:gravity="left|center_vertical"
                android:paddingLeft="18dip"
                android:text="질문게시판"
                android:textColor="#ffffff"
                android:textSize="50px" />

            <Button
                android:id="@+id/btnDeal"
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_bg"
                android:drawableLeft="@drawable/deal"
                android:drawablePadding="10dip"
                android:gravity="left|center_vertical"
                android:paddingLeft="18dip"
                android:text="거래게시판"
                android:textColor="#ffffff"
                android:textSize="50px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="153dp">
            android:orientation="horizonal"

            <Button
                android:id="@+id/btnPopular"
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_bg"
                android:drawableLeft="@drawable/popular"
                android:drawablePadding="10dip"
                android:gravity="left|center_vertical"
                android:paddingLeft="18dip"
                android:text="인기게시판"
                android:textColor="#ffffff"
                android:textSize="50px" />

            <Button
                android:id="@+id/btntaxi"
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_bg"
                android:drawableLeft="@drawable/taxi"
                android:drawablePadding="10dip"
                android:gravity="left|center_vertical"
                android:paddingLeft="18dip"
                android:text="카풀게시판"
                android:textColor="#ffffff"
                android:textSize="50px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="153dp">
            android:orientation="horizonal"

            <Button
                android:id="@+id/btnMywrite"
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_bg"
                android:drawableLeft="@drawable/mywrite"
                android:drawablePadding="10dip"
                android:gravity="left|center_vertical"
                android:paddingLeft="18dip"
                android:text="내가 쓴 글"
                android:textColor="#ffffff"
                android:textSize="50px" />

            <Button
                android:id="@+id/btnMycomment"
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_bg"
                android:drawableLeft="@drawable/mycomment"
                android:drawablePadding="10dip"
                android:gravity="left|center_vertical"
                android:paddingLeft="18dip"
                android:text="내가 쓴 댓글"
                android:textColor="#ffffff"
                android:textSize="50px" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>