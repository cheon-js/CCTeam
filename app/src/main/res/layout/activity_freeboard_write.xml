<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">


    <EditText
        android:id="@+id/board_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="제목"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/board_iv"
        android:layout_width="411dp"
        android:layout_height="155dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/board_title"
        tools:layout_editor_absoluteX="2dp"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/board_content"
        android:layout_width="409dp"
        android:layout_height="243dp"
        android:hint="내용"
        app:layout_constraintTop_toBottomOf="@+id/board_iv"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/input_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사진 등록"
        app:layout_constraintTop_toBottomOf="@+id/board_content"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/input_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="등록"
        app:layout_constraintTop_toBottomOf="@+id/input_image"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>